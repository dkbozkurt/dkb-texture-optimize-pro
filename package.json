{
  "name": "dkb-texture-optimize-pro",
  "version": "1.0.1",
  "type": "module",
  "description": "Texture optimization library for HTML5 games (PixiJS/ThreeJS) with per-texture configuration using Sharp",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "texture-optimizer": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "texture-optimizer": "node dist/cli/index.js"
  },
  "keywords": [
    "texture",
    "optimization",
    "sharp",
    "image-processing",
    "webgl",
    "pixijs",
    "threejs",
    "html5-games",
    "playable-ads",
    "game-development"
  ],
  "author": "Dogukan Kaan Bozkurt",
  "license": "MIT License",
  "repository": {
    "type": "git",
    "url": "https://github.com/dkbozkurt/dkb-texture-optimize-pro"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "sharp": "^0.34.3",
    "commander": "^12.1.0",
    "glob": "^10.4.5",
    "chalk": "^5.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "@types/node": "^22.10.1"
  }
}
